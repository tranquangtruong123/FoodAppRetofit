<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:id="@+id/layout_linner"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:background="@color/gray"
            android:weightSum="10"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/edt_search"
                android:background="@color/gray"
                android:imeOptions="actionSearch"
                android:fontFamily="@font/myfont"
                android:gravity="center"
                android:textSize="19dp"
                android:hint="Search something ..."
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/img_search"
                android:padding="8dp"
                android:src="@drawable/ic_search"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ImageView
            android:padding="8dp"
            android:src="@drawable/ic_qr_code_scanner"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:padding="8dp"
            android:src="@drawable/ic_camera"
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_laouthint"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layout_linner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ryc_search"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/contraint_layout"
       app:layout_constraintTop_toBottomOf="@id/layout_linner"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.core.widget.NestedScrollView
           app:layout_constraintTop_toTopOf="parent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <androidx.cardview.widget.CardView
                   android:id="@+id/home_cardview"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp"
                   android:layout_marginStart="20dp"
                   android:layout_marginEnd="20dp"
                   app:cardCornerRadius="10dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="200dp">
                   <ImageView
                       android:id="@+id/home_imageview"
                       android:scaleType="center"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"/>
               </androidx.cardview.widget.CardView>
               <TextView
                   android:id="@+id/txt_name_saleproduct"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="@font/myfont"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/home_cardview"
                   android:text="Product Sales"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/rcy_saleproduct"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginTop="10dp"
                   app:layout_constraintTop_toBottomOf="@id/txt_name_saleproduct"
                   />

               <TextView
                   android:id="@+id/txt_name_poducts"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="@font/myfont"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintTop_toBottomOf="@id/rcy_saleproduct"
                   android:text="Product Sales"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/ryc_category"

                   app:layout_constraintTop_toBottomOf="@id/txt_name_poducts"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
               <View
                   app:layout_constraintTop_toBottomOf="@id/ryc_category"
                   app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="150dp"/>
           </androidx.constraintlayout.widget.ConstraintLayout>
       </androidx.core.widget.NestedScrollView>
   </androidx.constraintlayout.widget.ConstraintLayout>
    <ProgressBar
        android:id="@+id/progressbar_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_notiitem"
        android:visibility="gone"
        android:text="Item is Empty"
        android:textSize="16dp"
        android:fontFamily="@font/myfont"
        android:textColor="@color/red"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>